[core]
  whitespace = trailing-space,tab-in-indent,cr-at-eol,space-before-tab
	excludesfile = /Users/sobstel/.gitignore_global
  pager = less -r
	editor = vim
[color]
  diff = auto
  interactive = auto
  status = auto
  branch = auto
[user]
	name = Przemek Sobstel
	email = przemek@sobstel.org
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  master = checkout master
  pp = !sh -c 'git pull --rebase && git push'
  l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  ll = log --stat --abbrev-commit
[push]
  default = current
[github]
  user = sobstel
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
